---
import { socials } from "../config/site";

interface Props {
  class?: string;
  size?: number; // px
}
const { class: className = "", size = 22 } = Astro.props as Props;
---

<div class={`flex items-center gap-4 ${className}`} data-reveal>
  {socials.instagram && (
    <a href={socials.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="text-white/70 hover:text-accent transition-colors">
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <rect x="3" y="3" width="18" height="18" rx="5" stroke="currentColor" stroke-width="1.6"/>
        <circle cx="12" cy="12" r="4.2" stroke="currentColor" stroke-width="1.6"/>
        <circle cx="17.5" cy="6.5" r="1.2" fill="currentColor"/>
      </svg>
    </a>
  )}
  {socials.soundcloud && (
    <a href={socials.soundcloud} target="_blank" rel="noopener noreferrer" aria-label="SoundCloud" class="text-white/70 hover:text-accent transition-colors">
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M9.5 18H18a3.5 3.5 0 0 0 0-7 3.6 3.6 0 0 0-.54.04A6 6 0 0 0 6.5 9.5V18h3" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M6.5 12v6M8 11.5V18M5 13V18M3.5 14V18" stroke="currentColor" stroke-width="1.4" stroke-linecap="round"/>
      </svg>
    </a>
  )}
  {socials.spotify && (
    <a href={socials.spotify} target="_blank" rel="noopener noreferrer" aria-label="Spotify" class="text-white/70 hover:text-accent transition-colors">
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <circle cx="12" cy="12" r="9" stroke="currentColor" stroke-width="1.6"/>
        <path d="M7.5 10.5c3.2-1 6.8-.8 9.8.6M7.8 13.4c2.7-.7 5.6-.5 8 .5M8.2 16c2-.4 4.2-.3 6 .4" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
      </svg>
    </a>
  )}
  {socials.tiktok && (
    <a href={socials.tiktok} target="_blank" rel="noopener noreferrer" aria-label="TikTok" class="text-white/70 hover:text-accent transition-colors">
      <svg width={size} height={size} viewBox="0 0 24 24" fill="none" aria-hidden="true">
        <path d="M14 6.5c.9 1.6 2.7 2.8 4.7 3V12c-1.9 0-3.7-.7-5-1.9V15a5 5 0 1 1-5-5c.5 0 .9.04 1.3.14v2.3A2.7 2.7 0 1 0 11.7 15V3.5H14v3z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/>
      </svg>
    </a>
  )}
</div>
