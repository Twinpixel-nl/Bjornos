---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import tour from "../data/tour.json";

// Selecteer de eerstvolgende 3 optredens
const today = new Date();
const upcoming = (tour as any[])
  .filter((e) => new Date(e.date) >= today)
  .sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime())
  .slice(0, 3);

const fmt = (d: string) =>
  new Date(d).toLocaleDateString("nl-NL", { day: "2-digit", month: "long", year: "numeric" });
---

<Layout title="BJORNOS — Drum & Bass DJ" description="Ik breng energie en flow naar elke set. Professionele drum & bass DJ voor clubs en festivals.">
  <Hero />

  <!-- Over mij (teaser) -->
  <section class="section">
    <div class="container-px grid items-start gap-10 md:grid-cols-2">
      <div data-reveal>
        <h2 class="text-white">Over mij</h2>
        <p class="mt-4 max-w-prose">
          Ik draai energieke, doordachte drum & bass met focus op flow, verrassende wendingen en strak mixwerk.
          Elke set is anders: van diepe rollers tot explosieve bangers — altijd met gevoel voor timing en publiek.
        </p>
        <div class="mt-6 flex gap-3">
          <a href="/about" class="btn btn-ghost">Meer over mij</a>
          <a href="/music" class="btn btn-primary">Luister sets</a>
        </div>
      </div>

      <div data-reveal data-delay="0.1" class="surface p-6">
        <h3 class="text-white">Boekingen</h3>
        <p class="mt-3 text-white/80">
          Beschikbaar voor clubs, festivals en private events. Ik neem mijn eigen energie mee — en laat die achter op de dansvloer.
        </p>
        <a href="/contact" class="btn btn-primary mt-5 inline-flex">Book Me</a>
      </div>
    </div>
  </section>

  <!-- Tour highlights -->
  <section class="section">
    <div class="container-px">
      <div class="flex items-end justify-between gap-4">
        <h2 class="text-white">Tour / Events</h2>
        <a href="/tour" class="text-sm text-white/70 hover:text-white transition-colors">Alle data →</a>
      </div>

      <div class="mt-6 grid gap-4 md:grid-cols-3">
        {upcoming.length === 0 ? (
          <p class="text-white/70" data-reveal>Nieuwe shows worden binnenkort aangekondigd.</p>
        ) : (
          upcoming.map((e) => (
            <article class="surface p-5" data-reveal>
              <div class="flex items-center justify-between gap-3">
                <time datetime={e.date} class="inline-flex items-center gap-2 rounded-full bg-white/5 px-3 py-1 text-xs text-white/80 ring-1 ring-white/10">
                  <span class="inline-block h-2 w-2 rounded-full bg-accent"></span>
                  {fmt(e.date)}
                </time>
                {e.city ? <span class="text-xs text-white/60">{e.city}</span> : null}
              </div>
              <h3 class="mt-3 font-display text-lg text-white">
                {e.venue ?? "TBA"}
              </h3>
              {e.title ? <p class="mt-1 text-white/70">{e.title}</p> : null}
              <div class="mt-4 flex gap-3">
                {e.tickets && (
                  <a href={e.tickets} target="_blank" rel="noopener" class="btn btn-primary">Tickets</a>
                )}
                <a href="/tour" class="btn btn-ghost">Meer info</a>
              </div>
            </article>
          ))
        )}
      </div>
    </div>
  </section>

  <!-- Blog teaser -->
  <section class="section">
    <div class="container-px surface p-6" data-reveal>
      <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
        <div>
          <h2 class="text-white">Updates / Blog</h2>
          <p class="text-white/70">Laatste nieuws, set-recaps en gedachten over drum & bass.</p>
        </div>
        <div class="mt-4 md:mt-0">
          <a href="/blog" class="btn btn-ghost">Naar blog</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
