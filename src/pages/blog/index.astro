---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog", ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog / Updates â€” BJORNOS" description="Laatste nieuws, set-recaps en updates.">
  <section class="section">
    <div class="container-px">
      <h1 class="text-white" data-reveal>Blog / Updates</h1>
      <p class="mt-3 max-w-prose text-white/80" data-reveal data-delay="0.05">
        Korte updates, set-recaps, gedachten en nieuws rond House.
      </p>

      <div class="mt-8 grid gap-5 md:grid-cols-2">
        {posts.length === 0 ? (
          <p class="text-white/60">Er zijn nog geen blogposts.</p>
        ) : (
          posts.map((post) => (
            <article class="surface p-6" data-reveal>
              <time datetime={post.data.date.toISOString()} class="text-xs text-white/60">
                {post.data.date.toLocaleDateString("nl-NL", { day: "2-digit", month: "long", year: "numeric" })}
              </time>
              <h2 class="mt-2 font-display text-xl text-white">
                <a href={`/blog/${post.slug}`} class="hover:text-accent transition-colors">{post.data.title}</a>
              </h2>
              <p class="mt-2 text-white/75">
                {post.data.description}
              </p>
              <div class="mt-4">
                <a href={`/blog/${post.slug}`} class="btn btn-ghost">Lees meer</a>
              </div>
            </article>
          ))
        )}
      </div>
    </div>
  </section>
</Layout>
