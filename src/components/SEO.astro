---
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = "BJORNOS - House DJ in Utrecht",
  description = "House DJ uit Utrecht. Energieke sets voor clubs, festivals en events. Boek BJORNOS voor jouw show.",
  ogImage = "/og.svg",
  canonical
} = Astro.props as Props;

const site = Astro.site ?? new URL(Astro.request.url).origin;
const url = new URL(Astro.request.url, site).toString();
const canonicalUrl = canonical ?? url;

const imageUrl = ogImage.startsWith("http")
  ? ogImage
  : new URL(ogImage, site).toString();

// stabiele ids voor schema linking
const websiteId = `${site}/#website`;
const personId = `${site}/#person`;

const schemaGraph = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "@id": websiteId,
      url: site,
      name: "BJORNOS",
      inLanguage: "nl-NL"
    },
    {
      "@type": "Person",
      "@id": personId,
      name: "BJORNOS",
      jobTitle: "House DJ",
      description,
      image: imageUrl,
      url: site,
      sameAs: [
        "https://soundcloud.com/bjornos-933013928"
      ],
      address: {
        "@type": "PostalAddress",
        addressLocality: "Utrecht",
        addressCountry: "NL"
      },
      areaServed: ["Utrecht", "Nederland"],
      makesOffer: [
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Service",
            name: "DJ-boeking (House DJ)",
            areaServed: ["Utrecht", "Nederland"]
          },
          availability: "https://schema.org/InStock"
        }
      ]
    }
  ]
};
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<meta property="og:type" content="website" />
<meta property="og:site_name" content="BJORNOS" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:alt" content="BJORNOS - House DJ" />
<meta property="og:locale" content="nl_NL" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageUrl} />

<meta name="theme-color" content="#0a0a0a" />

<script type="application/ld+json" set:html={JSON.stringify(schemaGraph)} />
