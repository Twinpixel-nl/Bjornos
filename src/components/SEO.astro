---
/**
 * SEO component
 * Props:
 * - title, description, ogImage, canonical (optioneel)
 */
export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = "BJORNOS - House DJ in Utrecht",
  description = "House DJ uit Utrecht. Energieke sets voor clubs, festivals en events. Boek BJORNOS voor jouw show.",
  ogImage = "/og.svg",
  canonical
} = Astro.props as Props;

const site = Astro.site ?? new URL(Astro.request.url).origin;
const url = new URL(Astro.request.url, site).toString();
const imageUrl = ogImage.startsWith("http") ? ogImage : new URL(ogImage, site).toString();
---

<title set:html={title} />
<meta name="description" content={description} />
<link rel="canonical" href={canonical ?? url} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:site_name" content="BJORNOS" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={imageUrl} />
<meta property="og:image:alt" content="BJORNOS - House DJ" />
<meta property="og:locale" content="nl_NL" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageUrl} />

<!-- Theme color -->
<meta name="theme-color" content="#0a0a0a" />

<!-- JSON-LD: Person / Musician met lokale targeting -->
<script type="application/ld+json">
{JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  name: "BJORNOS",
  jobTitle: "House DJ",
  description,
  image: imageUrl,
  url,
  sameAs: [
    "https://www.instagram.com/...",
    "https://soundcloud.com/...",
    "https://www.facebook.com/...",
  ],
  address: {
    "@type": "PostalAddress",
    addressLocality: "Utrecht",
    addressCountry: "NL"
  },
  areaServed: ["Utrecht", "Nederland"],
  makesOffer: [{
    "@type": "Offer",
    itemOffered: {
      "@type": "Service",
      name: "DJ-boeking (House DJ)",
      areaServed: ["Utrecht", "Nederland"]
    },
    availability: "https://schema.org/InStock"
  }]
})}
</script>
